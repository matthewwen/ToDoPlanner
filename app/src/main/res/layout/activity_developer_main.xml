<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".developerActivities.DeveloperMainActivity"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- This displays all the databases -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_heading_database"/>

        <Button
            android:id="@+id/task_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_task_list"
            android:onClick="showTaskDatabase"/>

        <Button
            android:id="@+id/note_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_notes_list"
            android:onClick="showNotesDatabase"/>

        <Button
            android:id="@+id/event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showEventDatabase"
            android:text="@string/developer_event_list"/>


        <!--This is for the notifications -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_heading_notification"/>

        <Button
            android:text="@string/developer_reminder_calender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="developerReminderCalendar"/>

        <Button
            android:text="@string/developer_reminder_turn_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="developerReminderTask"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_reminder_weather"
            android:onClick="developerWeatherUpdate"/>

        <!-- This Test The Job Service on the device -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_heading_job_services"/>

    </LinearLayout>

</ScrollView>